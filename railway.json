{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "NODE_OPTIONS='--no-deprecation' npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 600,
    "healthcheckInterval": 30,
    "restartPolicyType": "always"
  }
}